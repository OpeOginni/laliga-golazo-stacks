#!/bin/bash
set -e #stops the execution of the script if it fails

ABS_PATH=$(readlink -f "$0")

TRANSACTIONS_PATH=$(dirname $ABS_PATH)
BIN_PATH=$(dirname $TRANSACTIONS_PATH)
PROJECT_PATH=$(dirname $BIN_PATH)

echo $PROJECT_PATH

echo "User Address: $1"
echo "Stack ID: $2"

if [ $# -ge 2 ]; then
    echo "You provided the Address Argument: $1 $2"
else
    echo "You didn't pass the needed Arguments. Please Provide as args: ./bin/scripts/getStackDetails <User Address> <Stack ID>"
    exit 1
fi

# 1) Get Details of the Stack

flow scripts execute $PROJECT_PATH/scripts/getStackDetails.cdc $1 $2


